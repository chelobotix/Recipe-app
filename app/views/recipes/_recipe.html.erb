    <% if current_page?(:controller => 'recipes', :action => 'index') %>
        <div class="recipes_container">
            <h3><%= link_to "Recipe #{recipe.id}: #{recipe.name}", user_recipe_path(id: recipe.id) %></h3>
            <p> <%= "#{recipe.description[0..100]}..." %> </p>
            <%= button_to "Delete Recipe", user_recipe_path(id: recipe.id), method: :delete %>
        </div>
    <% else %>
        <div class="recipe_container">
            <h2><%= link_to "Recipe #{recipe.id}: #{recipe.name}", user_recipe_path(id: recipe.id) %></h3>
            <div>
                <p> <%= "Preparation Time: #{pluralize(recipe.preparation_time, 'hour')}" %> </p>
                <p> Toggle button</p>
            </div>
            <p> <%= "Cooking Time: #{pluralize(recipe.cooking_time, 'hour')}" %> </p>
            <p> <%= "Steps: #{recipe.description}" %> </p>
            <%= button_to "Generate shopping list",
                user_recipes_path, class: "my_class",
                id: "my_id", method: :get,
                :onclick => "alert('Input collected!')"
            %>
            <%= button_to "Add ingredient", user_foods_path, class: "my_class" %>

            <hr>
        </div>
    <% end %>
