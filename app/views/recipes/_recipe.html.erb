    <% if current_page?(:controller => 'recipes', :action => 'index') %>
        <div class="flip-card">
            <div class="flip-card-inner ">
                <div class="flip-card-front px-3">
                    <p class="font-bold text-xl"><%= "Recipe #{recipe.id}" %></p>
                    <p class="text-lg"><%= recipe.name %></p>
                </div>
                <div class="flip-card-back px-3">
                    <a href="<%= recipe_path(id: recipe.id) %>">
                        <p class="text-lg font-bold mb-2"><%= recipe.name %></p>
                        <p class=""><%= "#{recipe.description[0..100]}..." %></p>
                    </a>
                    <%= button_to "Remove", recipe_path(id: recipe.id), method: :delete, class:"mt-5 font-bold text-lg hover:underline hover:text-red-600" %>
                </div>
            </div>
        </div>
    <% else %>
        <div class="ml-10 mt-8">
            <h1 class="text-center text-2xl font-bold"><%= recipe.name %></h1>
            <div class="flex flex-col gap-2 mt-5">
                <div class="flex justify-between">
                    <p><strong>Preparation Time: </strong><%= pluralize(recipe.preparation_time, 'hour') %></p>
                    <button>Public toggle</button>
                </div>
                <p><strong>Cooking Time: </strong><%= pluralize(recipe.cooking_time, 'hour') %></p>
                <p><strong>Steps: </strong><%= recipe.description %></p>
                <div class="flex justify-between">
                    <button>Generate Shopping List</button>
                    <button>Add Ingredient</button>
                </div>
            </div>

            <table class="w-full border-collapse mt-5">
                <thead>
                <tr class="bg-gray-300">
                    <th class="p-4 text-left">Food</th>
                    <th class="p-4 text-left">Quantity</th>
                    <th class="p-4 text-left">Unit Price</th>
                    <th class="p-4 text-left">Actions</th>
                </tr>
                </thead>
                <tbody>
                <% if recipe.foods %>
                    <% recipe.foods.reverse.each do |food| %>
                    <tr class="border border-2 ">
                        <td class="p-4"><%= food.name%></td>
                        <td class="p-4"><%= food.quantity%></td>
                        <td class="p-4"><%= food.price%></td>
                        <td class="p-4">
                        <%= link_to "Modify", method: :put, class: "my_class" %>
                        <%= link_to "Remove", method: :delete, class: "my_class" %>
                        </td>
                    </tr>
                    <% end %>
                <% else %>
                    <tr>
                    <td colspan="4" class="p-4 text-center">No Food Found</td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    <% end %>
