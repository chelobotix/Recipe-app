<%= form_with model: @recipe, url: recipes_path, method: :post do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="py-8 ml-10">
    <form class="w-full max-w-sm mx-auto bg-white p-8 rounded-md shadow-md">

      <div class="mb-4">
        <%= form.label :name, class:'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.text_field :name, autofocus: true, autocomplete: "name", class:'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <%= form.label :preparation_time, "Preparation time (hours)", class:'block text-gray-700 text-sm font-bold mb-2'%>
        <%= form.number_field :preparation_time, in: 1.0..8.0, step: 0.25, class:'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <%= form.label :cooking_time, "Cooking time (hours)", class:'block text-gray-700 text-sm font-bold mb-2'%>
        <%= form.number_field :cooking_time, in: 1.0..8.0, step: 0.25, class:'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <%= form.label :description, class:'block text-gray-700 text-sm font-bold mb-2' %>
        <%= form.text_area :description, autocomplete: "description", class:'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500' %>
      </div>

      <div class="mb-4">
        <label class="switch">
          <%= form.check_box :public, class:"checkbox" %>
          <span class="slider"></span>
        </label>
      </div>



      <button class="btn-primary">
        <%= form.submit %>
      </button>
    </form>
  </div>
<% end %>
