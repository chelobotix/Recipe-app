    <%= form.label :preparation_time %><br />
    <%= form.number_field :preparation_time, autocomplete: "preparation_time" %>
  </div>

  <div class="field">
    <%= form.label :cooking_time %><br />
    <%= form.number_field :cooking_time, autocomplete: "cooking_time" %>
  </div>

  <div class="field">
    <%= form.label :description %><br />
    <%= form.text_area :description, autocomplete: "description" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
